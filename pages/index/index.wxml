<!--pages/index/index.wxml-->
<block>
  <searchBar/>
</block>
<block>
  <swiper 
      class='swiper'
      indicator-color="#ccc" 
      indicator-active-color="#fff">
    <swiper-item wx:for="{{swiperArray}}" wx:key="{{index}}">
      <image src="/images/index/banner.png"></image>
    </swiper-item>
  </swiper>
</block>
<block class="menuWrap">
  <view class='menu'>
    <view class='menuInner'>
      <view 
        bindtap='navgationto'
        data-item="{{item}}"
        wx:for="{{menuList}}" 
        class='item' 
        wx:key="{{item.text}}">
        <image src="{{item.src}}"></image>
        <view>
          <text>{{item.text}}</text>
        </view>
      </view>
    </view>
  </view>
</block>
<block>
  <view class='listwrap'>
    <view class='title'>
      <text>推荐课程</text>
      <text bindtap="navgation">查看全部</text>
    </view>
    <view 
      bindtap="detail"
      class='item' 
      wx:for="{{list}}" 
      wx:key="{{item.id}}">
      <view class='left'>
        <view class='title'>
          <text>{{item.name}}</text>
        </view>
        <view class='status'>
          <mediaType media="{{item.type || 1}}"/>
          <text>共{{item.keyword1}}节课 共{{item.keyword2}}分钟</text>
        </view>
      </view>
      <view class='right'>
        <image src="{{item.img_url}}"></image>
      </view>
    </view>
  </view>
</block>

