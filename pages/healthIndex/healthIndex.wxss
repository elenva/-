.wrap {
  display: flex;
  height: 100%;
}
.wrap .left {
  flex: 0 0 180rpx;
  background-color:rgba(244,244,244,1);
  height: 100%;
  width: 180rpx;
}
.wrap .left .menuItem {
  height: 90rpx;
  position: relative;
  text-align: center;
  line-height: 90rpx;
  font-size:28rpx;
}
.wrap .left .menuItem .tag {
  display: none;
  width: 10rpx;
  height: 40rpx;
  background-color: #EB2E25;
  position: absolute;
  top: 25rpx;
  left: 0;
}
.wrap .left .active {
  background-color: #fff;
  font-weight: 600;
}
.wrap .left .active .tag {
  display: block;
}

.wrap .right {
  flex: 1;
