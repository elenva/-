<!--pages/buy/buy.wxml-->
<scoreBar/>
<view class="infowrap">
  <view class="pro">
    <image src="/images/index/ad1.png"></image>
    <view class="info">
      <view class="title">小学数学基础快速提升秘诀一知名小学教育专家谭先问先生...</view>
      <view class="price">18元/次</view>
      <view class="time">有效期 15天</view>
    </view>
  </view>
  <view class="handle">
    <view>
      <text>购买方式</text>
      <picker
        bindchange="pickerChange" 
        range="{{pickerData}}" 
        value="{{pickermodel}}">
        {{pickerData[pickermodel]}}
        <image src="/images/video/icon_down_grey.png"/>
      </picker>
    </view>
    <view class='tip'>
      <icon type="warn" size='16'></icon>
      <text>有效期内无限制次数</text>
    </view>
    <view>
      <text>购买次数</text>
      <view class="numStep"><numStep/> </view>
      <text class='unit'>次</text>
    </view>
  </view>
  <view class='total'>
    <text>共1天，合计18元</text>
  </view>
</view>
<view class="hr"></view>
<view class="handlewrap">
  <view class='item'>
    <text>使用积分(抵扣-2.00元)</text>
    <numStep/>
  </view>
  <view class='item'>
    <text>优惠券</text>
    <text>3可用</text>
    <image src="/images/icon_right_gray.png"></image>
  </view>
  <view class='total'>
    合计抵扣-2.00元
  </view>
</view>
<view class="submitbar">
  <text>合计18元</text>
  <button type="warn" bindtap='result'>立即购买</button>
</view>