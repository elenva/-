/* pages/My/team/team.wxss */
.wrap {
  height: 330rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.wrap .info {
  display: flex;
  margin-bottom: 50rpx;
}
.wrap .info .avatar{
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
}
.wrap .info .namewrap{
  flex: 1;
  padding: 45rpx 30rpx 0 30rpx;
}
.wrap .info .namewrap > text {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 1;
}
.wrap .info .namewrap .level {
  width: 130rpx;
  height: 30rpx;
  border-radius: 8rpx;
  background-color: rgba(235,46,37,.2);
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  padding: 0 8rpx;
}
.wrap .info .namewrap .level image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 9rpx;
}
.wrap .info .namewrap .level text {
  font-size: 22rpx;
  color: #EB2E25;
}
.wrap .info .code {
  flex: 0 0 84rpx;
  width: 84rpx;
  height: 84rpx;
  padding-top: 25rpx;
}
.wrap .total {
  display: flex;
  font-size: 28rpx;
  line-height: 1;
  margin-bottom: 20rpx;
}
.wrap .total text {
  flex: 1;
}
.wrap .total text:last-child{
  text-align: right;
}
.wrap .put {
  width: 188rpx;
  height: 48rpx;
  color: #fff;
  background-color: #EB2E25;
  text-align: center;
  line-height: 48rpx;
  position: absolute;
  right: 0;
  border-radius:24rpx 0px 0px 24rpx;
  font-size: 28rpx;
}
.line{
  height: 20rpx;
  background-color: #F2F2F2;
}

.list .item {
  border-bottom: 1rpx solid #DCDCDD;
  height: 120rpx;
  display: flex;
  padding: 0 30rpx;
  align-items: center;
}
.list .item:last-child {
  /* border-bottom: none; */
}
.list .item text {
  flex: 1;
}
.list .myjoin {
  font-size: 28rpx;
  color: #999999;
  text-align: right;
}
.list .myjoin text {
  text-align: right;
}
.list .myjoin text:first-child {
  text-align: left;
  font-size: 36rpx;
  color: #488AE4;
}
.list .item .avatar {
  flex: 0 0 80rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.list .item .nameWrap {
  flex: 1;
  padding-left: 20rpx;
}
.list .item .nameWrap .name {
  font-size: 28rpx;
  line-height: 1;
}
.list .item .nameWrap .info {
  font-size: 22rpx;
  color: #999999;
  line-height: 1;
  margin-top: 12rpx;
}