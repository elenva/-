/* pages/score/score.wxss */
.list {

}
.list .item {
  border-bottom: 1rpx solid #DCDCDD;
  padding: 30rpx;
  display: flex;
  align-items: center;
  height: 120rpx;
  box-sizing: border-box;
}
.list .item .left {
  flex: 1;
}
.list .item .left .title {
  font-size: 28rpx;
  font-weight: 600;
  line-height: 1;
  margin-bottom: 12rpx;
}
.list .item .left .time {
  font-size: 22rpx;
  color: #999999;
}
.list .item .right {
  flex: 0 0 200rpx;
  text-align: right;
  line-height: 120rpx;
  font-size: 36rpx;
  color: #488AE4;
}
