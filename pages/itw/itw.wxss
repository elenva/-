/* pages/i&t/i&t.wxss */
.chooseWrap {
  display: flex;
  width: 750rpx;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  z-index: 10;
  border-top: 1px solid #DCDCDD;
  align-items: center;
  box-sizing: border-box;
}
.chooseWrap .zj {
  flex: 1;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
}
.chooseWrap .zj .statu {
  width: 82rpx;
  height: 30rpx;
  background-color: rgba(72,138,228,.2);
  border-radius: 8rpx;
  position: relative;
  top:2rpx;
  left: 12rpx;
  font-size: 22rpx;
  color: #488AE4;
  text-align: center;
}
.chooseWrap .select {
  flex: 0 0 222rpx;
  width: 222rpx;
  background-color: #488AE4;
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
}
.chooseWrap .select icon {
  margin-left: 10rpx;
  position: relative;
  top: 2rpx;
}
.panel {
  width: 100%;
  height: 500rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
  padding: 20rpx 30rpx;
  border-radius: 20rpx 20rpx 0 0;
  box-sizing: border-box;
  overflow-y: auto;
}
.panel .title {
  border-bottom: 1px solid #DCDCDD;
  height: 88rpx;
  font-size: 20rpx;
  color: #999;
  line-height: 95rpx;
}
.panel .item {
  display: flex;
  border-bottom: 1px solid #DCDCDD;
  height: 98rpx;
  font-size: 28rpx;
  line-height: 98rpx;
}
.panel .item:last-child{
  border-bottom: 0;
}