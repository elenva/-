/* pages/i&t/i&t.wxss */
.wrap {
  padding: 50rpx 30rpx;
}
.wrap .title {
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height:1;
  margin-bottom: 47rpx;
}
.wrap > image {
  max-width: 100%;
}
.chooseWrap {
  display: flex;
  width: 750rpx;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  z-index: 10;
  border-top: 1px solid #DCDCDD;
  align-items: center;
  box-sizing: border-box;
}
.chooseWrap .zj {
  flex: 1;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
}
.chooseWrap .zj .statu {
  width: 82rpx;
  height: 30rpx;
  background-color: rgba(72,138,228,.2);
  border-radius: 8rpx;
  position: relative;
  top:2rpx;
  left: 12rpx;
  font-size: 22rpx;
  color: #488AE4;
  text-align: center;
}
.chooseWrap .select {
  flex: 0 0 222rpx;
  width: 222rpx;
  background-color: #488AE4;
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
}
.chooseWrap .select icon {
  margin-left: 10rpx;
  position: relative;
  top: 2rpx;
}
.panel {
  width: 100%;
  height: 500rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
  padding: 20rpx 30rpx;
  border-radius: 20rpx 20rpx 0 0;
  box-sizing: border-box;
  overflow-y: auto;
}
.panel .title {
  border-bottom: 1px solid #DCDCDD;
  height: 88rpx;
  font-size: 20rpx;
  color: #999;
  line-height: 95rpx;
}
.panel .item {
  display: flex;
  border-bottom: 1px solid #DCDCDD;
  height: 98rpx;
  font-size: 28rpx;
  line-height: 98rpx;
}
.panel .isActive {
  color: #488AE4;
}
.panel .item:last-child{
  border-bottom: 0;
}

.needBuy {
  text-align: center;
  padding-top: 240rpx;
}
.needBuy > image {
  width: 64rpx;
  height: 74rpx;
  margin-bottom:30rpx;
}
.needBuy > .inner {
  width: 580rpx;
  height: 310rpx;
  background-color:rgba(255,255,255,.3);
  margin:0 auto;
  border-radius: 20rpx;
  padding-top: 50rpx;
  line-height: 1;
}
.needBuy > .inner > view {
  color: #fff;
  font-weight: 600;
  font-size: 28rpx;
  margin-bottom: 50rpx;
}
.needBuy > .inner .tip {
  margin-bottom: 10rpx;
}
.needBuy > .inner > view:last-child {
  font-size: 36rpx;
}
 .needBuy > .inner .btnwrap {
   display: flex;
 }
.needBuy > .inner .btnwrap button {
  width: 194rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}