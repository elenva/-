/* components/voice/voice.wxss */
.voiceWrap {
  width: 100%;
  height: 300rpx;
  position: relative;
  justify-content: center;
  background-color: #000;
  display: flex;
  align-items: center;
}
.voiceWrap  image {
  height: 100rpx;
  width: 100rpx;
  margin-right: 10rpx;
}
.voiceWrap .contollers {
  height: 86rpx;
  background-color: #F4F4F4;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.voiceWrap .contollers .play {
  flex: 0 0 50rpx;
  font-size: 24rpx;
}
.voiceWrap .contollers .time {
  flex: 0 0 170rpx;
  font-size: 26rpx;
}
.voiceWrap .contollers .progress {
  flex: 1;
}
.voiceWrap .contollers .progress .progressInner {
  width: 100%;
  background-color: #fff;
  border-radius: 4prx;
  height: 8rpx;
  position: relative;
}
.voiceWrap .contollers .progress .progressInner .percent {
  width: 33%;
  height: 8rpx;
  border-radius: 4rpx;
  position: absolute;
  left: 0;
  top: 0;
  background-color: #488AE4;
}
.voiceWrap .contollers .progress .progressInner .percent .pointer {
  width: 20rpx;
  height: 20rpx;
  background-color: #ddd;
  border-radius: 50%;
  position: absolute;
  right: -10rpx;
  top: -6rpx;
}