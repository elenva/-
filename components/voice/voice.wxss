/* components/voice/voice.wxss */
.voiceWrap {
  width: 100%;
  height: 220rpx;
  position: relative;
  justify-content: center;
  background-color: #000;
  display: flex;
  align-items: center;
}
.voiceWrap .inner {
  display: flex;
  position: absolute;
  bottom: 0;
  left:0;
  padding-left: 10rpx;
}
.voiceWrap .inner text{
  color: #fff;
  font-size: 22rpx;
}
.voiceWrap  image {
  height: 100rpx;
  width: 100rpx;
  margin-right: 10rpx;
}
.voiceWrap .contollers {
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #fff;
}
.voiceWrap .contollers .play {
  flex: 0 0 50rpx;
}
.voiceWrap .contollers .time {
  flex: 0 0 170rpx;
}
.voiceWrap .contollers .progress {
  flex: 1;
}
.voiceWrap .contollers .progress .progressInner {
  width: 100%;
  background-color: #fff;
  border-radius: 4prx;
  height: 8rpx;
  position: relative;
}
.voiceWrap .contollers .progress .progressInner .percent {
  width: 33%;
  height: 8rpx;
  border-radius: 4rpx;
  position: absolute;
  left: 0;
  top: 0;
  background-color: #488AE4;
}
.voiceWrap .contollers .progress .progressInner .percent .pointer {
  width: 20rpx;
  height: 20rpx;
  background-color: #ddd;
  border-radius: 50%;
  position: absolute;
  right: -10rpx;
  top: -6rpx;
}