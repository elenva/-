/* components/searchBar/searchBar.wxss */
.wrap {
  width: 750rpx;
  height: 100rpx;
  background-color: #488AE4;
  padding: 14rpx 30rpx;
  box-sizing: border-box;
}
.wrap .wrapInner {
    align-items: center;
    display: flex;
    width: 100%;
    height: 72rpx;
    border-radius: 36rpx;
    padding: 0 40rpx;
    background-color: #fff;
    box-sizing: border-box;
}

.wrap .wrapInner image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 14rpx;
  position: relative;
  top: -1rpx;
}

.wrap .wrapInner input {
  height: 28rpx;
  margin-right: 14rpx;
  width: 580rpx;
  font-size: 26rpx;
  line-height: 72rpx;
}
